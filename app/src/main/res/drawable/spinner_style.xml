<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270" android:endColor="@android:color/white" android:startColor="@android:color/white" />
                    <stroke android:width="2dp" android:color="@color/colorPrimaryDark" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item android:right="15dp">
                <bitmap android:gravity="right|center_vertical" android:src="@drawable/drop_down" />
            </item>
        </layer-list>
    </item>

</selector>