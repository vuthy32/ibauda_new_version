<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:background="@drawable/card_background"
    android:paddingBottom="10dp">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="220px"
        android:layout_height="220px"
        android:id="@+id/imageViewUrl"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/thumb_bg"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/textViewCarNo"
        android:layout_below="@+id/imageViewUrl"
        android:layout_alignLeft="@+id/imageViewUrl"
        android:layout_alignStart="@+id/imageViewUrl"
        android:textColor="@color/read_color"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/textViewCarTitle"
        android:layout_below="@+id/textViewCarNo"
        android:layout_alignLeft="@+id/textViewCarNo"
        android:layout_alignStart="@+id/textViewCarNo"
        android:singleLine="true"
        android:textColor="@color/blue_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/textViewFOB"
        android:textColor="@color/fobcolor"
        android:layout_below="@+id/textViewCarTitle"
        android:layout_alignLeft="@+id/textViewCarTitle"
        android:layout_alignStart="@+id/textViewCarTitle"
        android:singleLine="true" />
</RelativeLayout>