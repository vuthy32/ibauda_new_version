<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="6dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/card_background">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="@dimen/size_image_list"
        android:layout_height="@dimen/size_image_list"
        android:id="@+id/imageViewData"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/bar_light_color"
        android:src="@drawable/thumb_bg"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/textViewNo"
        android:textColor="@color/color_read"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewData"
        android:layout_toEndOf="@+id/imageViewData" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewTitle"
        android:layout_below="@+id/textViewNo"
        android:layout_toRightOf="@+id/imageViewData"
        android:layout_toEndOf="@+id/imageViewData"
        android:textColor="@color/colorPrimary"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/textViewContryCity"
        android:layout_below="@+id/textViewTitle"
        android:layout_toRightOf="@+id/imageViewData"
        android:layout_toEndOf="@+id/imageViewData" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/textViewPrice"
        android:layout_below="@+id/textViewContryCity"
        android:layout_toRightOf="@+id/imageViewData"
        android:layout_toEndOf="@+id/imageViewData"
        android:textColor="@color/color_read" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtNewStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageViewData"
        android:layout_alignEnd="@+id/imageViewData"
        android:layout_alignBottom="@+id/imageViewData"
        android:layout_alignParentTop="true"
        android:background="@drawable/sold_outs" />

    <TextView
        android:layout_width="@dimen/size_image_list"
        android:layout_height="@dimen/size_image_list"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtReserved"
        android:text="Reserved"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageViewData"
        android:layout_alignEnd="@+id/imageViewData"
        android:layout_alignBottom="@+id/imageViewData"
        android:textColor="@color/reversed_color_textdata"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>